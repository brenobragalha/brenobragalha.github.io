---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
			}
			.title h1 {
				line-height: 1;
				color: var(--black);
			}
			.message {
				text-align: center;
				color: var(--gray);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="title">
				<h1>500 - Internal Server Error</h1>
				<hr />
			</div>
			<p class="message">Oops! Something went wrong on our end. Please try again later or return to the <a href="/">homepage</a>.</p>
		</main>
		<Footer />
	</body>
</html>
